{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    //    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["google-apps-script"],
    // GAS環境用設定
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,        // AI開発効率のため暗黙的any型を許可
    "noImplicitThis": false,       // this型制約を緩和
    "noPropertyAccessFromIndexSignature": false,  // 動的プロパティアクセスを許可
    "strictNullChecks": false,     // null/undefined制約を緩和
    "noUnusedLocals": false,       // 未使用変数警告を無効化
    "noUnusedParameters": false,   // 未使用パラメータ警告を無効化
    // GAS特有の重複定義を許可
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "**/*.js",
    "../types/dev-environment.d.ts",
    "../types/index.d.ts"
  ],
  "exclude": ["node_modules", "**/*.min.js"],
  "typeAcquisition": {
    "enable": true,
    "include": ["google-apps-script"]
  }
}
