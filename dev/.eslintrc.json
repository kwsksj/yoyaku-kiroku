{
  "extends": ["../.eslintrc.json"],
  "env": {
    "browser": false,
    "node": false,
    "googleappsscript/googleappsscript": true
  },
  "plugins": ["googleappsscript"],
  "rules": {
    // GAS環境では全ファイルがグローバルスコープのため重複定義を許可
    "no-redeclare": "off",
    "no-undef": "off",
    "no-unused-vars": "warn",
    // GAS特有のグローバル変数を許可
    "googleappsscript/no-global-assignment": "off",
    // Logger.log の引数数チェックを緩和
    "@typescript-eslint/no-unused-expressions": "off"
  },
  "globals": {
    // GAS特有のグローバル定数を許可
    "CONSTANTS": "readonly",
    "STATUS": "readonly",
    "UI": "readonly",
    "CLASSROOMS": "readonly",
    "ITEMS": "readonly",
    "SS_MANAGER": "readonly",
    "SpreadsheetManager": "readonly",
    "SCHEDULE_STATUS_CANCELLED": "readonly",
    "SCHEDULE_STATUS_COMPLETED": "readonly",
    "SCHEDULE_STATUS_SCHEDULED": "readonly",
    "DEBUG_ENABLED": "readonly",
    "global": "readonly"
  }
}
